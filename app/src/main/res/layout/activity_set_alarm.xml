<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".ui.alarm.SetAlarmActivity">

    <TextView
        android:id="@+id/time_picker_hour_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="32sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/time_picker_hour"
        app:layout_constraintEnd_toEndOf="@+id/time_picker_hour"
        app:layout_constraintStart_toStartOf="@+id/time_picker_hour" />

    <TextView
        android:id="@+id/time_picker_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="6"
        android:textSize="64sp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/time_picker_separator"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_picker_hour_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="32sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/time_picker_hour"
        app:layout_constraintEnd_toEndOf="@+id/time_picker_hour"
        app:layout_constraintStart_toStartOf="@+id/time_picker_hour" />


    <TextView
        android:id="@+id/time_picker_minute_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59"
        android:textSize="32sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/time_picker_minute"
        app:layout_constraintEnd_toEndOf="@+id/time_picker_minute"
        app:layout_constraintStart_toStartOf="@+id/time_picker_minute" />

    <TextView
        android:id="@+id/time_picker_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text=":"
        android:textSize="64sp"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_picker_hour"
        app:layout_constraintEnd_toStartOf="@+id/time_picker_minute"
        app:layout_constraintStart_toEndOf="@+id/time_picker_hour" />

    <TextView
        android:id="@+id/time_picker_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="64sp"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_picker_separator"
        app:layout_constraintEnd_toStartOf="@+id/time_picker_ampm"
        app:layout_constraintStart_toEndOf="@+id/time_picker_separator" />

    <TextView
        android:id="@+id/time_picker_minute_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="32sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/time_picker_minute"
        app:layout_constraintEnd_toEndOf="@+id/time_picker_minute"
        app:layout_constraintStart_toStartOf="@+id/time_picker_minute" />

    <TextView
        android:id="@+id/time_picker_ampm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="AM"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_picker_minute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time_picker_minute" />

    <TextView
        android:id="@+id/time_picker_ampm_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="PM"
        android:textSize="32sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/time_picker_ampm"
        app:layout_constraintEnd_toEndOf="@+id/time_picker_ampm"
        app:layout_constraintStart_toStartOf="@+id/time_picker_ampm" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@+id/time_picker_minute_next"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomorrow-Sat, Nov 8"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/calendar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/colorOnSurface" />

            <LinearLayout
                android:id="@+id/days_of_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/date_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView android:id="@+id/day_s" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="S" android:textColor="@color/design_default_color_error"/>
                <TextView android:id="@+id/day_m" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="M" />
                <TextView android:id="@+id/day_t" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="T" />
                <TextView android:id="@+id/day_w" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="W" />
                <TextView android:id="@+id/day_th" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="T" />
                <TextView android:id="@+id/day_f" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="F" />
                <TextView android:id="@+id/day_sa" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="S" />

            </LinearLayout>

            <EditText
                android:id="@+id/alarm_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Alarm name"
                android:inputType="text"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/days_of_week"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/alarm_name_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/alarm_sound_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm sound"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                app:layout_constraintStart_toStartOf="parent"/>
            
            <TextView
                android:id="@+id/alarm_sound_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homecoming"
                 android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintTop_toBottomOf="@+id/alarm_sound_label"
                app:layout_constraintStart_toStartOf="parent"/>
            
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/alarm_sound_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/alarm_sound_label"
                app:layout_constraintBottom_toBottomOf="@+id/alarm_sound_value"/>
            
             <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android.background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/alarm_sound_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/vibration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibration"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/vibration_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic call"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintTop_toBottomOf="@+id/vibration_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/vibration_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/vibration_label"
                app:layout_constraintBottom_toBottomOf="@+id/vibration_value"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/vibration_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/snooze_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snooze"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/snooze_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 minutes, 3 times"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintTop_toBottomOf="@+id/snooze_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/snooze_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/snooze_label"
                app:layout_constraintBottom_toBottomOf="@+id/snooze_value"/>

            <Button
                android:id="@+id/cancel_button"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/save_button"/>

            <Button
                android:id="@+id/save_button"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>